<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="patient">
                <t t-call="web.external_layout">
                    <div class="page">
<!--                        <h2>SHILPI HOSPITAL MANAGEMENT <img t-if="patient.company_id.logo" t-att-src="image_data_url(patient.company_id.logo)" style="max-height:180px;" alt="logo"/></h2>-->
                        <header style="background-color:skyblue; padding-top:0px;">
                        <h2 style="color:black">SHILPI HOSPITAL MANAGEMENT SYSTEM<img t-if="patient.company_id.logo" t-att-src="image_data_uri(patient.company_id.logo)" style="max-height: 100px;" alt="Logo"/></h2>
                        </header>
                        <div>

                            <h1 t-field="patient.patient_id" style="color:skyblue" ></h1>
                            <br/>
                            <p>
                                <b style="color:skyblue; font-size:20px;">AGE:</b>
                                <span style="font-size:20px;" t-field="patient.age"/>
                            </p>
                            <p>
                                <b style="color:skyblue; font-size:20px;">Gender:</b>
                                <span style="font-size:20px;" t-field="patient.gender"/>
                            </p>
                            <p>
                                <b style="color:skyblue; font-size:20px;">Admit Date:</b>
                                <span style="font-size:20px;" t-field="patient.admit_date"/>
                            </p>
                            <p>
                                <b style="color:skyblue;font-size:20px;">Discharge Date:</b>
                                <span style="font-size:20px;" t-field="patient.discharge_date"/>
                            </p>
                        </div>
                        <table>
                            <thead>
                                <tr style="color:skyblue; font-size:20px;">
                                    <th style="padding:40px"><b>PRODUCT NAME</b></th>
                                    <th style="padding:40px"><b>QUANTITY</b></th>
                                    <th style="padding:40px"><b>UNIT PRICE</b></th>
                                    <th style="padding:40px"><b>SUB TOTAL</b></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="patient.patient_lines" t-as="lines">
                                    <tr style="font-size:20px;">
                                        <td style="padding:40px">
                                            <span t-field="lines.product_id"/>
                                        </td>
                                        <td style="padding:40px">
                                            <span t-field="lines.qty"/>
                                        </td>
                                        <td style="padding:40px">
                                            <span t-field="lines.unit_price"/>
                                        </td>
                                        <td style="padding:40px">
                                            <span t-field="lines.subtotal"/>
                                        </td>
                                    </tr>
                                </t>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4">
                                        total
                                    </td>
                                    <td>
                                        <span t-esc="sum(line.subtotal for line in patient.patient_lines)"/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>